image {
    height: 40rpx;
    width: 40rpx;
}

/* 用户余额样式 */
.balance {
    padding-left: 45rpx;
    margin-bottom: 40rpx;
    color: white;
    background-color: #d42520;
    color: rgb(228, 227, 227);
}
.yve {
    position: relative;
    top: -14rpx;
    font-size: 50rpx;
}
.text1 {
    height: 80rpx;
    font-size: 30rpx;
}
.arrow {
    position: relative;
    top: 8rpx;
}

/* 用来存放充值选项的盒子 */
.combo {
    /* 弹性布局flex */
    display: flex;
    /* flex-direction定义排序方向 */
    /* flex-direction: row; */
    /* flex-wrap定义如何换行 */
    /* flex-wrap: wrap; */
    /* flex-flow属性是flex-direction属性和flex-wrap属性的简写形式，默认值为row nowrap */
    flex-flow: row wrap;
    /* justify-content属性定义了项目在主轴上的对齐方式 */
    justify-content: center;
}
/* 充值选项样式 */
.combolist {
    width: 320rpx;
    height: 200rpx;
    text-align: center;
    margin: 0rpx 10rpx 30rpx;
    border-radius: 20rpx;
    background-color: #f1f1f1;
}
/* 点击态样式 */
.combolist.active {
    box-shadow: 0 0 0 1rpx #d42520;
    background-color: rgb(253, 235, 235);
}
.text2 {
    position: relative;
    top: 6rpx;
    right: 17rpx;
    font-size: 25rpx;
}
.text3 {
    position: relative;
    top: 60rpx;
    left: 32rpx;
    width: 80%;
    color: rgb(75, 74, 74);
    padding-top: 20rpx;
    font-size: 25rpx;
    border-top: solid 1rpx;
}
/* 点击态样式 */
.text3.active {
    color: #d42520;
    border-top: #d42520 solid 1rpx;
}
.text4 {
    position: relative;
    top: 35rpx;
    left: 10rpx;
}
/* 点击态样式 */
.text4.active {
    color: #d42520;
}

/* 底部说明样式 */
.information {
    padding: 0 45rpx;
    margin-bottom: 50rpx;
}
.head {
    font-size: 30rpx;
    font-weight: 550;
}
.text5 {
    font-size: 25rpx;
    color: rgb(156, 156, 156);
}

/* 充值按钮样式 */
.btnbox {
    height: 80rpx;
    width: 100%;
    background-color: #fff;
}
.btn {
    left: 60rpx;
    height: 80rpx;
    width: 600rpx;
    margin: 50rpx auto;
    border-radius: 90rpx;
    text-align: center;
    /* 让文字垂直居中 */
    line-height: 80rpx;
    color: white;
    background-color: #d42520;
}
/* 实现充值按钮点击态效果 */
.btn-active {
    background-color: #ec7e7a;
}