    padding-top: 10rpx;
    border-bottom: 1rpx solid rgb(230, 230, 230);
    padding-bottom: 50rpx;
}
.box2 .ifm {
    display: flex;
    margin-top: 20rpx;
    margin-left: 30rpx;
}
.box2 .ifm view {
    margin-left: 10rpx;
}
.box2 .ifm .name {
    font-weight: 700;
}
.box2 .ifm .data {
    font-size: 24rpx;
