page {
    background-color: rgb(230,230,230);
}
.box1 {
    display: flex;
    align-items: center;
    height: 150rpx;
    margin-bottom: 20rpx;
    border-top: 1rpx solid rgb(230, 230, 230);
    background-color: #fff;
}
.box1 .point {
    font-size: 68rpx;
    font-weight: 900;
    color: rgb(255, 145, 0);
}
.box1 text {
    margin-left: 27rpx;
    font-size: 24rpx;
    color: rgb(129, 129, 129);
}

.box2 {
    background-color: #fff;
}
